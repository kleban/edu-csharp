@using ToDoList.Models
@model IEnumerable<Project>
@{

    ViewData["Title"] = "Projects";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>This project management tool! Save your time and energy! <a href="/project/create" class="btn btn-light">Create Project</a> <a href="/project/index?view=a" class="btn btn-primary">Accordeon</a></p>
</div>



<div class="row">
    @if (Model.Any())
    {
        @foreach (var p in Model)
        {
            <div class="col-md-4 col-lg-3 col-xs-12">
                <div class="card mb-4 shadow-sm">
                    <div class="img-top" style="background-image:url(https://random.imagecdn.app/400/200?@(new Random().Next(1, 1111))">&nbsp;</div>
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">
                            @p.Description
                        </p>
                        <div class="btn-group" role="group">
                            <a href="/todo/index/@p.Id" class="btn btn-primary btn-block">View tasks (@p.Tasks.Count())</a>
                            <a href="/project/edit/@p.Id" class="btn btn-warning btn-block">Edit</a>
 
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal">
                                Delete
                            </button>
                        </div>
                        
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-primary" role="alert">
            Проєкти поки відсутні!
        </div>
    }
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Project Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you really want to remove this project? All tasks will be removed also.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Delete it!</button>
            </div>
        </div>
    </div>
</div>




<style>
    .img-top {
        height: 200px;
        background-position: center;
        background-size: cover;
    }


</style>